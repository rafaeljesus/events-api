{
  "name": "events-api",
  "version": "1.0.0",
  "description": "The public Events API",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": " npm run lint && NODE_ENV=test nyc --reporter=lcov ava && nyc report",
    "lint": "standard --verbose | snazzy"
  },
  "author": "Rafael Jesus <rafaelljesus86@gmail.com> (http://github.com/rafaeljesus)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/rafaeljesus/events-api.git"
  },
  "pre-commit": [],
  "standard": {
    "parser": "babel-eslint"
  },
  "ava": {
    "babel": {
      "presets": [
        "es2015",
        "stage-2"
      ]
    },
    "files": [
      "test/*spec.js"
    ],
    "failFast": true,
    "tap": true,
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "dependencies": {
    "@rafaeljesus/events-core": "latest",
    "micro": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-syntax-async-functions": "^6.8.0",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.6.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "nyc": "^6.4.4",
    "pre-commit": "^1.1.2",
    "request-promise": "^3.0.0",
    "snazzy": "^4.0.0",
    "standard": "^7.1.0"
  },
  "engines": {
    "node": ">=4.4.0"
  }
}
